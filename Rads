  <script>
    // ===== Days counter since anniversary =====
    const anniversary = new Date("2025-08-20T00:00:00");
    const now = new Date();
    const diffMs = Math.max(0, now - anniversary);
    const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    document.getElementById("daysCount").textContent = String(days);

    // Footer date
    document.getElementById("today").textContent = now.toLocaleDateString(undefined, {
      year: "numeric", month: "long", day: "numeric"
    });

    // ===== Floating hearts generator =====
    const hearts = document.getElementById("hearts");
    const makeHeart = () => {
      const h = document.createElement("div");
      h.className = "heart";
      const left = Math.random() * 100;
      const size = 10 + Math.random() * 18;
      const duration = 8 + Math.random() * 10;
      const delay = Math.random() * 2;

      h.style.left = left + "vw";
      h.style.width = size + "px";
      h.style.height = size + "px";
      h.style.animationDuration = duration + "s";
      h.style.animationDelay = delay + "s";
      h.style.opacity = (0.35 + Math.random() * 0.45).toFixed(2);
      h.style.background = `rgba(255, 127, 177, ${(0.14 + Math.random()*0.18).toFixed(2)})`;

      hearts.appendChild(h);

      // remove after animation
      setTimeout(() => h.remove(), (duration + delay) * 1000);
    };

    // spawn a few initially + steady rate
    for (let i = 0; i < 14; i++) makeHeart();
    setInterval(makeHeart, 700);

    // ===== Surprise: lightweight confetti burst (no libraries) =====
    const confettiBtn = document.getElementById("confettiBtn");
    confettiBtn.addEventListener("click", () => {
      const burst = 80;
      for (let i = 0; i < burst; i++) {
        const piece = document.createElement("div");
        const size = 6 + Math.random() * 8;
        piece.style.position = "fixed";
        piece.style.left = (50 + (Math.random()*20 - 10)) + "vw";
        piece.style.top = "55vh";
        piece.style.width = size + "px";
        piece.style.height = size + "px";
        piece.style.borderRadius = "999px";
        piece.style.background = `rgba(255, 127, 177, ${0.25 + Math.random()*0.35})`;
        piece.style.boxShadow = "0 10px 30px rgba(255,127,177,0.15)";
        piece.style.pointerEvents = "none";
        piece.style.zIndex = 9999;

        const dx = (Math.random() * 2 - 1) * 220;
        const dy = - (120 + Math.random() * 260);
        const rot = (Math.random() * 2 - 1) * 180;

        piece.animate([
          { transform: `translate(0,0) rotate(0deg)`, opacity: 1 },
          { transform: `translate(${dx}px, ${dy}px) rotate(${rot}deg)`, opacity: 0 }
        ], {
          duration: 1200 + Math.random() * 900,
          easing: "cubic-bezier(.2,.7,.2,1)"
        });

        document.body.appendChild(piece);
        setTimeout(() => piece.remove(), 2400);
      }
    });

    // Back to top
    document.getElementById("scrollTopBtn").addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  </script>
